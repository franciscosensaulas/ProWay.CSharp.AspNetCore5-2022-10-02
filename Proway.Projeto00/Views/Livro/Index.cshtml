@model List<LivroIndexViewModel>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Título</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var livro in Model)
        {
            <tr>
                <td>@livro.Id</td>
                <td>@livro.Titulo</td>
                <td>@livro.Categoria</td>
                <td>@livro.Preco</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@livro.Id"
                        class="btn btn-outline-warning">Editar</a>
                    <a asp-controller="Categoria" asp-action="Apagar" asp-route-id="@livro.Id"
                        class="btn btn-outline-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>